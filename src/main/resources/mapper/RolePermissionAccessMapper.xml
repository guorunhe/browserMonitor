<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shzu.convenience.mapper.RolePermissionAccessMapper">

    <delete id="deleteByPid">
        delete from sys_role_permission where pid = #{pid}
    </delete>

    <insert id="addRolePermissionAccess">
        insert into sys_role_permission(rid, pid) values(#{rid}, #{pid});
    </insert>
</mapper>